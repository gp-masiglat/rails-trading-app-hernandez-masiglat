<!DOCTYPE html>
<html>
  <head>
    <title>RailsTradingAppHernandezMasiglat</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
  
<% if current_user %>
  <div class="d-flex justify-content-end">
    <%= button_to "Stocks", stocks_path, method: :get, :class => 'btn btn-link btn-block m-2' %>
    <%= button_to "Transactions", transactions_path, method: :get, :class => 'btn btn-link btn-block m-2' %>
    <%= button_to "Cash Account", cash_account_path, method: :get, :class => 'btn btn-link btn-block m-2' %>
    <%= button_to "Home", home_path, method: :get, :class => 'btn btn-link btn-block m-2' %>
    <%= button_to "Users", users_path, method: :get, :class => 'btn btn-link btn-block m-2' %>
    <%= button_to "Logout", logout_path, method: :delete, :class => 'btn btn-link btn-block m-2' %>
  </div>
<% else %>
  <div class="d-flex justify-content-end">
    <%= button_to "Login", login_path, method: :get , :class => 'btn btn-link btn-block m-2' %>
  </div>
<% end %>
    <%= yield %>
  </body>
</html>
