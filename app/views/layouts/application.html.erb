<!DOCTYPE html>
<html>
  <head>
    <title>RailsTradingAppHernandezMasiglat</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

<% if current_user %>
  <div class="row d-flex justify-content-between font-weight-bold" style="color:#f9eae6;background-color:#56261a;">
    <% if current_user.role != 'Admin' %>
      <div class="col-lg-3 d-flex justify-content-start m-1"> 
        <span class="d-flex align-items-center align-content-start"><i class="fa-solid fa-money-bill-trend-up text-warning"></i> &nbsp;MH &nbsp;   T r a d i n g  A p p </span>
      </div>
      <div class="col-lg-8 d-flex justify-content-end"> 
        <%# button_to "Home", root_path, method: :get, :class => 'btn btn-link btn-block m-2',:style=>"color:#f9eae6;" %>
        <%= button_to "Stocks", stocks_path, method: :get, :class => 'btn btn-link btn-block m-2',:style=>"color:#f9eae6;" %>
        <%= button_to "Transactions", transactions_path, method: :get, :class => 'btn btn-link btn-block m-2',:style=>"color:#f9eae6;" %>
        <%= button_to "Cash Account", cash_account_path, method: :get, :class => 'btn btn-link btn-block m-2',:style=>"color:#f9eae6;" %>
        <%= button_to "User Profile", user_path(current_user.id), method: :get, class: 'btn btn-link btn-block m-2',:style=>"color:#f9eae6;" %>
        <%= button_to "Logout", logout_path, method: :delete, :class => 'btn btn-link btn-block m-2',:style=>"color:#f9eae6;" %>
      </div>
    <% else %>
      <div class="col-lg-3 d-flex justify-content-start m-1"> 
        <span class="d-flex align-items-center align-content-start"><i class="fa-solid fa-money-bill-trend-up text-warning"></i> &nbsp;MH &nbsp;   T r a d i n g  A p p </span>
      </div>
      <div class="col-lg-8 d-flex justify-content-end"> 
        <%= button_to "Home", users_path, method: :get, :class => 'btn btn-link btn-block m-2',:style=>"color:#f9eae6;" %>
        <%= button_to "Transactions", transactions_path, method: :get, :class => 'btn btn-link btn-block m-2',:style=>"color:#f9eae6;" %>
        <%= button_to "Logout", logout_path, method: :delete, :class => 'btn btn-link btn-block m-2',:style=>"color:#f9eae6;" %>
      </div> 
    <% end %>
  </div>
<% else %>
  <div class="row d-flex text-decoration-none" style="color:#f9eae6;background-color:#56261a;">
    <div class="col-lg-3 d-flex justify-content-start m-1"> 
        <span class="d-flex align-items-center align-content-start"><i class="fa-solid fa-money-bill-trend-up text-warning"></i> &nbsp;MH &nbsp;   T r a d i n g  A p p </span>
      </div>
      <div class="col-lg-8 d-flex justify-content-end"> 
        <%# button_to "Home", stocks_path, method: :get, :class => 'btn  btn-block m-2',:style=>"color:#f9eae6;" %>
        <%= button_to "Login", login_path, method: :get , :class => 'btn btn-block m-2',:style=>"color:#f9eae6;" %>
      </div> 
    </div>
<% end %>

<body class="" style="color:#56261a;background-color:#f9eae6;">
    <%= yield %>
  </body>
</html>
