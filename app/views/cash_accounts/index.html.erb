<div class="row text-center d-flex justify-content-center m-1">
    <h1>Cash Account</h1>
    <h3>Balance : P <%= @user.balance %></h3>
    <div class='row d-flex justify-content-center'>
        <div class='col-lg-2'>
            <%= button_to "Deposit/Widthdraw", cash_account_new_path, method: :get, :class => 'btn btn-block m-2' %>
        </div>
    </div>

    <div id="ca_table" class="row text-center justify-content-center">
        <table class="roundedCorners">
            <thead>
            <tr>
                
                <th scope="col">Bank Name</th>
                <th scope="col">Amount</th>
                <th scope="col">Account Number address</th>
                <th scope="col">Trans Type</th>
                <th scope="col">Date</th>
            </tr>
            </thead>
            <tbody>
            <% @cash_accounts.each do |cash_account| %>
                <%= render cash_account %>
            
            <% end %>
            </tbody>
        </table>
    </div>
</div>
